<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="left"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txv_license_no"
                android:textSize="18sp"
                android:text="SWG-VSM : " />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txvCurrentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="DATE: 09/05/2563 " />

            <TextView
                android:id="@+id/txvCurrentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"

                android:text="TIME: 12:00:00" />

            <TextView
                android:id="@+id/txvOnlineStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="[ONLINE]" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <Button-->
<!--            android:layout_weight="1"-->
<!--            android:id="@+id/btnSwitchIn"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="รับเข้า" />-->


        <TextView
            android:id="@+id/textView_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:visibility="gone"
            android:textSize="8sp"
            android:text="Printer State" />

        <Button
            android:id="@+id/btnScanQR"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="อ่าน QR Code" />

<!--        <Button-->
<!--            android:layout_weight="1"-->
<!--            android:id="@+id/btnSwitchOut"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="ทำออก" />-->
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:background="#777777"
                        android:textColor="#cecece"
                        android:text="คนขับ" />

                    <ImageView
                        android:id="@+id/imgDriver"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:background="#777777"
                        android:textColor="#cecece"
                        android:text="บัตร ปชช." />
                    <ImageView
                        android:id="@+id/imgLicense"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:background="#777777"
                        android:textColor="#cecece"
                        android:text="อื่นๆ" />
                    <ImageView
                        android:id="@+id/imgOther"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/logo" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout

                    android:layout_width="350dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtLicense"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:ems="15"
                        android:textSize="20dp"
                        android:layout_margin="15dp"
                        android:inputType="textPersonName"
                        android:hint="ทะเบียนรถ/License..." />

                    <Spinner
                        android:id="@+id/spnProvince"

                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/province"
                        />
                    <EditText
                        android:id="@+id/edtIDNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="15"
                        android:textSize="20dp"
                        android:layout_margin="15dp"
                        android:inputType="text"
                        android:hint="เลขบัตร ปชช./ID Number..." />


                    <Spinner
                        android:id="@+id/spnWorking"

                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/visit_target_home"
                        />
                    <EditText
                        android:id="@+id/edtRemark"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:ems="15"
                        android:textSize="20dp"
                        android:layout_margin="15dp"
                        android:inputType="text"
                        android:hint="หมายเหตุ/Remark..." />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnSave"

                            android:layout_margin="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_weight="1"
                            android:textSize="24sp"
                            android:text="พิมพ์สลิป" />

                        <Button
                            android:layout_margin="15dp"
                            android:id="@+id/btnClear"
                            android:layout_width="100dp"
                            android:text="ล้างข้อมูล"
                            android:layout_height="70dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:background="#777777"
                        android:textColor="#cecece"
                        android:text="HISTORY IN/OUT" />

                    <ListView
                        android:id="@+id/list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:dividerHeight="10dp"
                        android:layout_weight="1" />
                </LinearLayout>




            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txvStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="left"
                        android:text=">>> " />

                    <TextView
                        android:id="@+id/txvUserStatus"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:gravity="right"
                        android:text="User: SHIFT1" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>







</LinearLayout>